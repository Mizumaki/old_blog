<header class="article">
  <nav class="breadcrumb">
    <ol>
      <li><a href="/">ホーム</a></li>
      <% let mainCategory; %>
      <% switch (category.main) {
        case "products":
          mainCategory = "マイプロダクト一覧"
          break;
        case "web-tech":
          mainCategory = "WEB開発"
          break;
        case "blockchain":
          mainCategory = "ブロックチェーン"
          break;
        case "analysis":
          mainCategory = "アクセス解析"
          break;
        default:
          throw new Error("パンくずリストの生成でエラー");
          break;
      } %>
      <% let subCategory; %>
      <% switch (category.sub) {
        case "NomadTime":
          subCategory = "ノマドタイム"
          break;
        case "Blazing-Fast-Blog":
          subCategory = "ブログ"
          break;
        case "Cryptocurrency":
          subCategory = "仮想通貨"
          break;
        case "Google-Analytics":
          subCategory = "Googleアナリティクス"
          break;
        default:
          subCategory = category.sub;
          break;
      } %>
      <li><a href="/<%= category.main %>" target="_blank"><%= mainCategory %></a></li>
      <li><a href="/<%= category.sub %>" target="_blank"><%= subCategory %></a></li>
    </ol>
  </nav>
  <h1><%= header.title %></h1>
  <div class='information'>
    <ul class='tags'>
    <% console.log('in tags') %>
      <% tags.forEach(function(tag) { %>
      <% console.log('in foreach') %>
      <li class='tag'><a href="/articles?tags=<%= tag %>" rel="tag"><%= tag %></a></li>
      <%  }); %>
    </ul>
    <div class='last-update-date'>
      <% const dateSlash = header.update.toDate().toLocaleDateString(); %>
      <% const dateHyphen = dateSlash.replace(/\//g,'-'); %>
      <time datetime="<%= dateHyphen %>"><%= dateSlash %></time>
    </div>
  </div>
  <div class="share-buttons">
    <ul>
      <li class="twitter">
        <a href="" target="_blank" rel="noopener">
          <amp-img src="/icon/logo/twitter_white.svg" alt="Twitter icon" width="2rem" height="1.7rem" layout="fixed"></amp-img>
        </a>
      </li>
      <li class="facebook">
        <a href="" target="_blank" rel="noopener">
          <amp-img src="/icon/logo/facebook.svg" alt="Facebook icon" width="2rem" height="2.1rem" layout="fixed">
        </a>
      </li>
      <li class="hatena">
        <a href="" target="_blank" rel="noopener">
          <amp-img src="/icon/logo/hatenabookmark.svg" alt="はてなブログ icon" width="3.2rem" height="3.2rem" layout="fixed">
        </a>
      </li>
      <li class="pocket">
        <a href="" target="_blank" rel="noopener">
          <amp-img src="/icon/logo/pocket_white.svg" alt="Pocket" width="1.8rem" height="1.6rem" layout="fixed"></amp-img>
        </a>
      </li>
    </ul>
  </div>
  <p><%= header.lead %></p>
</header>
